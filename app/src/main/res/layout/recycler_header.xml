<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#000">

        <ImageView
            android:id="@+id/recycler_header_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/recycler_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="bottom"
            android:textColor="#fff"
            android:textSize="20sp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycler_header_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#606060"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/recycler_header_editor_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

            <ImageView
                android:id="@+id/recycler_header_editor_7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>